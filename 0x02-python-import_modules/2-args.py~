#!/usr/bin/python3
from sys import argv

if len(argv) == 1:
    print("0 arguments.")
elif len(argv) == 2:
    print("{} argument:".format(len(argv) - 1))
    print("{}: {}".format(1, len(argv[1])))
else:
    print("{} arguments:".format(len(argv) - 1))
    for a in range(1, len(argv)):
        print("{}: {}".format(a, argv[a]))
